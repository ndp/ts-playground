{
  "name": "ts-service-worker",
  "version": "1.0.30",
  "description": "Generate caching service-worker.js using declarative Typescript.",
  "author": {
    "name": "Andrew Peterson, NDP Software",
    "email": "andy@ndpsoftware.com"
  },
  "keywords": [
    "build",
    "cache",
    "declarative configuration",
    "offline",
    "progressive web apps",
    "pwa",
    "service worker",
    "sw",
    "ts",
    "typescript"
  ],
  "license": "Copyright (c) 2023 Andrew J. Peterson, NDP Software",
  "sideEffects": false,

  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./types/index.d.mts",
  "files": [
    "README.md",
    "dist",
    "types"
  ],

  "scripts": {
    "example1": "node --loader tsc example/amp-what-sw.mts",
    "example2": "node --loader tsc example/offline-backup.mts",
    "test": "node --test --loader tsx src/specs/*.mts",
    "build": "yarn clean && yarn build-dist && yarn build-types",
    "clean": "rm -fr ./dist/* ./types/*",
    "build-dist": "./node_modules/.bin/esbuild --target=esnext --outfile=./dist/index.js --bundle --platform=node --sourcemap --format=cjs src/index.mts",
    "build-types": "tsc -p src/tsconfig.json",
    "prepublishOnly": "yarn build"
  },

  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "esbuild": "*",
    "tsx": "*"
  }
}
